<!--index.wxml-->
<view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="card card-2" wx:for="{{taskList}}" wx:for-item="item"  wx:key="key" wx:for-index="key" style="background:{{randomColorArr[key]}}" >
        <text class="card-text" bindtap="btnGetInfo"  data-date='{{item.date}}' data-content='{{item.content}}' >{{item.content}}</text>
        <view class="card-button" bindtap="btnHaveDone" data-id='{{item._id}}'>
            <cover-image src = "cloud://ftodo-2gwc7.6674-ftodo-2gwc7-1303120739/images/index/have_done.png" class="button-img" ></cover-image>
        </view>
        <view class="card-button2" bindtap="btnDelete" data-id='{{item._id}}'>
            <cover-image src = "cloud://ftodo-2gwc7.6674-ftodo-2gwc7-1303120739/images/index/delete.png" class  ="button-img" ></cover-image>
        </view>
       <!-- <mp-dialog title="具体信息" show="{{dialogShow}}"  buttons="{{oneButton}}" bindbuttontap="btnCloseInfo">
        <view >{{date}}</view>
       <view>{{content}}</view>
      </mp-dialog> -->
      </view>
    </form>
    <view class="blank"></view>
<view class="inputView" >
<input class="input" placeholder="添加事务" placeholder-style="color: pink"  value='{{newTask}}' bindinput="bindInput" data-name="newTask" />
<view class="card-button3" bindtap="btnAddCard">
<cover-image src = "cloud://ftodo-2gwc7.6674-ftodo-2gwc7-1303120739/images/index/have_done.png" class="button-img" ></cover-image>
</view>
</view>
</view>


