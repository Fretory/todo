/* pages/me/me.wxss */
page{
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}
.container{
  background: #EA5149;
  height: 280rpx;
  overflow: hidden;
  width: 100%;
}

.user-login{
  background: #EA5149;
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 0 30.25rpx;
}

.profile-info {
background: #EA5149;
width: 100%;
height: 280rpx;
display: flex;
flex-wrap: wrap;
align-items: center;
justify-content: flex-start;
padding: 0 30.25rpx;
}

.profile-info .avatar {
height: 148rpx;
width: 148rpx;
border-radius: 50%;
border: 5rpx solid #fff;
}




.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}